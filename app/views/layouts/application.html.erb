<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ACHUSP</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container" class="container">
      <header style="margin-bottom:30px">
				<div class="row">
					<div class="twelve columns" style="text-align: right">
        		<%= render 'layouts/navigation' %>
					</div>
				</div>
				
				<div class="row">
					<div class="three columns" style="font-size:2.5em;text-align:center">
						<a href="/" class="logo">ACH<span style="font-weight:bold">USP</span></a>
					</div>
					<div class="nine columns">
					</div>
				</div>
				
				<div class="row">
					<div class="twelve columns">
        		<%= render 'layouts/messages' %>
					</div>
				</div>

      </header>
      <div id="main" role="main" class="row">
        <%= yield %>
      </div>
      <footer style="margin-top:10px; text-align:center;background-color:#666; height:40px; color:#EEE; padding: 10px; weight:100%">

				ACHUSP - Licenciado sob a <a style="color: #FFF" href="http://www.gnu.org/licenses/agpl.html">GNU Affero General Public License vers√£o 3 ou superior.</a>

      </footer>
    </div> <!--! end of #container -->
  </body>
</html>
