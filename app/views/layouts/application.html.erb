					<div class="nine columns">
					</div>
				</div>
			
      </header>
			<div class="row" style="position: relative">
				<div class="twelve columns" style="margin-bottom:20px;">
      		<%= render 'layouts/messages' %>
				</div>
			</div>
      <div id="main" role="main" class="row">
        <%= yield %>
      </div>
      <footer style="margin-top:10px; background-color:#666; height:50px; color:#EEE; padding: 15px; width:100%;position: absolute; bottom: 0px;">
	<div class="row">
			<div class="two columns" >
											<%= link_to(image_tag("botao_facebook.png", {:size => '32x32', :style => "margin-bottom: 0px; position:relative; bottom: 5px; left: 80px "}), "https://www.facebook.com/pages/Achusp/368103986620301", :style => "margin: 0px; padding:0px; font-size: 0px ")%>
			</div>
