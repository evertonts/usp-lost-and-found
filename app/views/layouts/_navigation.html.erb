<ul class="nav">
  <% if user_signed_in? %>
    <li>
		Bem vindo, <%=link_to current_user.name, user_path(current_user)%> |
    <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %> |      
    </li>
		<%= link_to 'Contato', contact_path %>
		
  <% else %>

<div class="row">
	<%= form_for(:user, :as => :user, :url => session_path(:user)) do |f|%>
		<div class="one columns"> 
		</div>
		
		<div class="one columns" style="padding-right: 0px">
			<%= f.label :email%> 
		</div>
		<div class="two columns end" style="padding-left: 5px">
			<%= f.email_field :email, :style => "height: 20px; margin: 2px; padding:1px"%>
		</div>
		
		<div class="one columns" style="padding-right: 0px">
			<%= f.label :password, "Senha"%> 
		</div>
		
		<div class="two columns end" style="padding-left: 5px">
			<%= f.password_field :password, :style => "height: 20px; margin: 2px; padding:1px"%>
		</div>
		
		<div class="one column end">
			<%= f.submit "Entrar", :class => "small secondary button", :style => "padding: 2.5px 10px 2.5px 10px; margin-top: 2px" %>
		</div>
		
			<div class="two columns end" style ="margin: 5px 0px 0px 0px; padding:0px;text-align:left">
				Ainda não é cadastrado?
			</div>
			<div class="one column end" style ="margin:2px 0px 0px 0px; padding:0px;text-align:left">
				<%= link_to 'Cadastre-se', new_user_registration_path, :class => "small secondary button", :style => "padding: 3.5px 10px 3.5px 10px;" %>
			</div>
	<% end %>
		
	<%end%>
		
</div>

</ul>