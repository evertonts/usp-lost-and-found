<h3>Mensagens enviadas</h3>

<div class="row">
	<div class="two columns">
		<b>Item</b>
	</div>
	<div class="four columns end">
		<b> Mensagem</b>
	</div>
	<div class"two columns end">
		<b> Para</b>
	</div>
</div>


<% for message in @sent_messages %>
	<div class="row"> 
		<p>
		<div class="two columns">
			<%= message.title %>
		</div>
		
		<div class="four columns end">
			<%= link_to message.text, message_path(message) %>
		</div>
		
		<div class="two columns end">
			<%= message.recipient.name %>
		</div>
		</p>
	</div>
<% end%>

<h3>Mensagens recebidas</h3>

<div class="row">
	<div class="two columns">
		<b>Item</b>
	</div>
	<div class="four columns end">
		<b> Mensagem</b>
	</div>
	<div class"two columns end">
		<b> De</b>
	</div>
</div>


<% for message in @received_messages %>
	<div class="row"> 
		<p>
		<div class="two columns">
			<%= message.title %>
		</div>
		
		<div class="four columns end">
			<%= link_to message.text, message_path(message) %>
		</div>
		
		<div class="two columns end">
			<%= message.sender.name %>
		</div>
		</p>
	</div>
<% end%>