<div class="row">
	<div class="three columns">
		<%= image_tag(@user.avatar.url(:thumb)) %>
	</div>
	<div class="four columns end">
		<h2><%= @user.name %></h2>
	</div>
</div>

<h3>Items</h3>

<% for item in @items %>
	<div class="row list <%= item.lost? ? "lost" : "found" %>">
		<div class="one column">
			<%= link_to image_tag(item.main_image_thumb), item.main_image %>
		</div>
		
		<div class="six columns">
			
			<p><%= link_to item.title, item_path(item), :class => "link" %></p>
		</div>
		
		<div class="one column end">
			<%= link_to "Editar", edit_item_path(item), :class=>"nice small button", :style => "margin: 10px 0px 10px 0px"%>
		</div>
		<div class="two columns end">
			<% unless item.returned %>
				<%= link_to item.lost? ? "Recuperado" : "Devolvido", recover_items_path(:id => item.id), :class => "nice small button", :style => "margin: 10px 0px 10px 0px"%>
			<%end%>
		</div>
	</div>
<% end %>

<%= render :partial => "messages/show_messages"%>


