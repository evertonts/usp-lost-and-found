<div style="background-color: #EEF">

	<ul id="reply-list-<%=@message.id%>">
		<% for reply in @message.replies %>
			<div class="row">
				<div class="one column">
				</div>

				<div class="six columns end one-line">
					<i><%=reply.user.name%> escreveu:</i>
				</div>
			</div>
		
			<div class="row">
				<div class="one column">
				</div>
		
				<div class="three columns end">
					<%= reply.text %>  
				</div>
			</div>

		<% end %>
	</ul>
</div>
