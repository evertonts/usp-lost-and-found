<%= simple_form_for(@item, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

	<div class="row">
		<div class="four columns">
			<h4><%= f.input :title, required: true, label: "TÃ­tulo" %><h4>
		</div>
	</div>
	<div class="row">
		
  	<div class="four columns">
			<%= f.input :description, :required => true, :label => "Descricao", as: :text, :input_html => {:columns => 10, :rows => 5}%>
		</div>
		
		<div class="six columns end">
			<div class="one column">
			</div>
			<%= f.fields_for :assets do |asset_fields|%>
				<% unless asset_fields.object.new_record? %>
					<div class="two columns">	
						<%= link_to image_tag(asset_fields.object.asset.url(:thumb)), asset_fields.object.asset.url(:original)  %>
					remover <%= asset_fields.check_box :_destroy%>
					</div>
				<% end %>

			<%end%>
		</div>
	</div>
	
	<div class="row">
		<div class="three columns">
			<%= f.input :tag_list, :label => "Tags (separadas por virgula)", :url => autocomplete_tag_name_items_path, :as => :autocomplete %>
		</div>
	</div>

	<div class="row">
		<div class="three columns">
			<%= f.input :lost_date, :required => true, :as => :string, :label => "Data que o item foi " + (@item.lost? ? "perdido" : "encontrado"), :input_html => {:value => @item.show_date} %>
		</div>
		<div class="two columns end" style="margin-top: 20px">
			<p> ex: 21/12/2012 </p>
		</div>
	</div>
	
	<div class="row">
		<div class="four columns">
			<% if @item.lost? %>
				<%= f.input :reward, :label => "Recompensa" %>
			<% end %>
		</div>
	</div>
		
		<%=f.input :lost, :as => :hidden %>
		

			<label for="aseets">Imagem</label>
			<%= f.fields_for :assets do |asset_fields|%>
				<%= asset_fields.file_field :asset if asset_fields.object.new_record?%>
			<%end%>

		<% unless @item.new_record? %>
			<%= f.input :returned, :inline_label => "Recuperado", :label => false %>
		<% end %>
		
  <div class="row">
    <%= f.button :submit %>
  </div>
<% end %>
